<!DOCTYPE html>
<html>
	<head>
		<title>STOCKS - @ViewBag.Title</title>
		<link rel="stylesheet" href="~/StyleSheet.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	</head>
	<body>
		<div class="container">
			<div class="header"><span class="app-title">STOCKS </span><i class="fa-solid fa-money-bill-trend-up logo"></i>
				<ul>
					<li>
						<a asp-controller="Stocks" asp-action="Explore">Explore Stocks</a>
					</li>
					|
					<li>
						<a asp-controller="Trade" asp-action="Index">Trade</a>
					</li>
					|
					<li>
						<a asp-controller="Trade" asp-action="Orders">Orders</a>
					</li>
				</ul>
			</div>

			<div class="page-content">
				@RenderBody()
			</div>
		</div>
		@RenderSection("Scripts", false)
	</body>
</html>